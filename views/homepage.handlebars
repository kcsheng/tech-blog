{{#each articles as |article|}}
  <section class="p-2">
    <div class="text-white bg-dark px-3 py-2 d-flex justify-content-between">
      <h2>{{article.title}}</h2>
      <p class="mt-2">Posted by
        {{article.user.username}}
        on
        {{format_date article.createdAt}}</p>
    </div>
    <div class="border p-2">
      <p>{{article.content}}</p>
    </div>
  </section>
{{/each}}