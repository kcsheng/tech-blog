<form class="login-form">
  <div class="form-group">
    <label for="username-login">Username</label>
    <input
      type="text"
      class="form-control"
      id="username-login"
      placeholder="Enter username"
    />
  </div>
  <div class="form-group">
    <label for="password-login">Password</label>
    <input
      type="password"
      class="form-control"
      id="password-login"
      placeholder="Enter password"
    />
  </div>
  <button type="submit" class="btn btn-primary col-12 mt-3">LOG IN</button>
</form>

<p>Not a member? <a href="/signup">SIGN UP</a> instead.</p>

<script src="./js/login.js"></script>