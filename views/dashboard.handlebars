{{#each articles as |article|}}
  <section class="p-2">
    <a href="dashboard/article/{{article.id}}">
      <div class="text-white bg-dark px-3 py-2 d-flex justify-content-between">

        <h2>{{article.title}}</h2>
        <p class="mt-2">Posted on {{format_date article.createdAt}}</p>
      </div>
    </a>
  </section>
{{/each}}
<div class="col text-center">
  <a href="/api/articles/add-form" class="btn btn-success btn-lg mt-2">+ New
    Post</a>
</div>