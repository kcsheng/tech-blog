<section class="p-2">
  <a href="/article/{{id}}">
    <div class="text-white bg-dark px-3 py-2 d-flex justify-content-between">

      <h2>{{title}}</h2>
      <p class="mt-2">Posted by
        {{user.username}}
        on
        {{format_date createdAt}}</p>
    </div>
  </a>
  <div class="border p-2">
    <p>{{content}}</p>
  </div>
</section>